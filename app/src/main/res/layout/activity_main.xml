<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A183A"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:background="#FF00DD" />

        <View
            android:id="@+id/second"
            android:layout_width="48dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/first"
            android:background="#FA43E5"
            />

        <View
            android:id="@+id/third"
            android:layout_width="48dp"
            android:layout_height="130dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/second"
            android:background="#F883E9" />

        <View
            android:id="@+id/fourth"
            android:layout_width="48dp"
            android:layout_height="190dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/third"
            android:background="#FBA7F1" />

        <View
            android:id="@+id/fifth"
            android:layout_width="48dp"
            android:layout_height="280dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/fourth"
            android:background="#F4BBEE" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/baloo"
            android:text="@string/no_sense_app"
            android:textColor="@color/purple_200"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/appName" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="created by Mateusz Rozanowski"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>