<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain_bg_2"

    >


    <TextView
        android:layout_marginTop="58dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textColor="#E1FFFFFF"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="80dp"
            >

            <Button
                android:id="@+id/button_home_1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="listView Useres"
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:text="scroll View"
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_3"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Alarm"
                android:background="@drawable/button_transparent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >

            <Button
                android:id="@+id/button_home_4"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Grid View"
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_5"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:text="Video "
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_6"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Music"
                android:background="@drawable/button_transparent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button_home_7"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Button 7 "
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_8"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:text="Button 8"
                android:background="@drawable/button_transparent"/>

            <Button
                android:id="@+id/button_home_9"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Button 9"
                android:background="@drawable/button_transparent"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>